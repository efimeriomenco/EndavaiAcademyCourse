@model Endava.iAcademy.Domain.Course


<section class="w-100">
    <form method="post " >
        <div>
            <div class="heading ">
                <h3>@Model.Title</h3>
            </div>
            <div class="d-flex flex-column">
                <span class="font-weight-bold">Author: @Model.Author</span>
                <span>Rating: @Model.Rating</span>
            </div>
            <div class="panel-footer d-flex">
                <a class="btn btn-lg"
                   asp-controller="Course"
                   asp-action="Details"
                   asp-route-Id="@Model.Id">
                    <i class="fas fa-search-plus"></i>
                </a>

                <a class="btn btn-lg"
                   asp-controller="Course"
                   asp-action="Edit"
                   asp-route-Id="@Model.Id">
                    <i class="fas fa-edit"></i>
                </a>

                <a class="btn btn-lg"
                   asp-controller="Course"
                   asp-action="Delete"
                   asp-route-Id="@Model.Id">
                    <i class="fas fa-trash"></i>
                </a>

            </div>
        </div>
        <div class="card-buy row">
            <div>
                <a type="submit" class="btn alert-danger font-italic" asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">Buy</a>
            </div>
            <div>
                <p class="m-2">@Model.Price$</p>
            </div>
        </div>
       

    </form>
    <hr/>
</section>